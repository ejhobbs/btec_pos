<!DOCTYPE html>
<html lang='en'>
<head>
  <title>Kool Media Rentals</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class='container_12'>
  <% if flash[:info] %>
      <div class="grid_10 prefix_1 suffix_1">
          <div class="alert alert-info margins">
            <%= flash[:info] %>
          </div>
      </div>
      <div class="clear"></div>
  <% end %>
  <% if flash[:error] %>
      <div class="grid_10 prefix_1 suffix_1">
        <div class="alert alert-error margins">
          <%= flash[:error] %>
        </div>
      </div>
  <% end %>
  <div class='grid_4 prefix_4 suffix_4'>
    <a href="/">
        <%= image_tag 'kool-media-logo.png', alt: 'Kool Media Logo', height: 100, class: 'center margins' %>
    </a>
  </div>
  <div class='clear'></div>
  <%= yield %>
</div>

</body>
</html>
